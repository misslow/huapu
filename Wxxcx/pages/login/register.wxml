<view class="login-warp">
<form bindsubmit="formSubmit">
<view class="warp-pos">
 <input  placeholder="请输入用户名" type="text" class="userPwd" name="username"/>
</view>

<view class="warp-pos">
<input placeholder="请输入电子邮箱" class="userPwd" name="email"/>
</view>

<view class="warp-pos">
<input placeholder="请输入手机号码" class="userPwd" name="phone"/>
</view>


<view class="warp-pos">
<input placeholder="请输入密码" class="userPwd" name="pwd1" password/>
<image src="../../icons/nosee.png" class="img-pos"></image>
</view>

<view class="warp-pos">
<input placeholder="请确认密码" class="userPwd" name="pwd2" password/>
<image src="../../icons/nosee.png" class="img-pos"></image>
</view>

<button class="login-btn" formType="submit" bindtap="add">注册账号</button>
</form>

</view>

